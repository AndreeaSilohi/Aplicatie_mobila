<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MeniuZilnic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <EditText
            android:id="@+id/aliment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_margin="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:hint="Micul-dejun este.."
            android:padding="22dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawablePadding="20dp"
            />


        <EditText
            android:id="@+id/aliment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:drawablePadding="20dp"
            android:hint="Gustarea 1 este.."
            android:inputType="text"
            android:padding="22dp"

            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/aliment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/user"
            android:layout_margin="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:drawablePadding="20dp"
            android:hint="Pranzul este.."
            android:inputType="text"
            android:padding="22dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/aliment4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_margin="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:drawablePadding="20dp"
            android:hint="Gustarea 2 este.."
            android:inputType="text"
            android:padding="22dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/aliment5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_margin="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:drawablePadding="20dp"
            android:hint="Cina este.."
            android:inputType="text"
            android:padding="22dp"

            android:textColor="@color/black"
            android:textColorHint="@color/black" />


        <Button
            android:id="@+id/Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:background="@color/design_default_color_primary"
            android:text="@string/Post"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.598"
            app:layout_constraintStart_toStartOf="@id/aliment4"
            app:layout_constraintTop_toTopOf="parent" />


        <ListView
            android:id="@+id/list"
            android:layout_width="409dp"
            android:layout_height="301dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/aliment4"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</ScrollView>

