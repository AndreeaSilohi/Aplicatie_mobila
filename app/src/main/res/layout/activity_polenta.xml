<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/w1"

        tools:context=".retete.PolentaActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:background="@drawable/text_background"
                android:gravity="left"
                android:text="@string/Ingrediente"
                android:textColor="@color/teal_200"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:gravity="right"
                app:srcCompat="@drawable/polenta" />

            <TextView
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->1/4 cană polenta (terci de porumb)"

                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"

                android:text="->1 cană apă"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="-> un vârf de cuțit de pudră de usturoi"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="-> un vârf de cuțit de sare "
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->1 cană de spanac proaspăt"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName7"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->50 g ciuperci"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->1 lingură parmezan dat pe răzătoare"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/Mod"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_margin="50dp"
                android:background="@drawable/text_background"
                android:gravity="left"
                android:text="@string/Mod_de_preparare"
                android:textColor="@color/teal_200"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/c"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>