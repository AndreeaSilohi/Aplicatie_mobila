<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/w1"
        tools:context=".retete.ConopidaActivity">


<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:background="@drawable/text_background"
                android:gravity="left"
                android:text="@string/Ingrediente"
                android:textColor="@color/teal_200"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:gravity="right"
                app:srcCompat="@drawable/conopida" />

            <TextView
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->500 g conopidă"

                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"

                android:text="->500 g broccoli"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="-> 500 g zucchini dat pe răzătoare"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="-> 400 g iaurt simplu (cu un conținut de grăsime de cel puțin 3%)"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->1 linguriță sare"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName7"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->2 ouă"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->150 g mozzarella dată pe răzătoare (sau alt tip de brânză)"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/editTextTextPersonName9"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="->2 căței de usturoi"
                tools:ignore="TouchTargetSizeCheck" />
    <TextView
        android:id="@+id/editTextTextPersonName10"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="-> 1/4 linguriță piper negru măcinat"
        tools:ignore="TouchTargetSizeCheck" />
    <TextView
        android:id="@+id/editTextTextPersonName11"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="-> verdețuri proaspete (în funcție de preferințe)"
        tools:ignore="TouchTargetSizeCheck" />



    <TextView
                android:id="@+id/Mod"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_margin="50dp"
                android:background="@drawable/text_background"
                android:gravity="left"
                android:text="@string/Mod_de_preparare"
                android:textColor="@color/teal_200"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cc"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>