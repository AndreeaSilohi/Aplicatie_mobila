<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrator.UploadRecipe"
    android:background="@drawable/m1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="70dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/image"
            android:src="@drawable/ic_baseline_add_a_photo_24"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nume rețetă"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:id="@+id/txt_recipe_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descriere"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:id="@+id/txt_description"
            />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Selectează o imagine"
            android:textSize="22sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FBC02D"
            android:textColor="@color/black"
            android:theme="@style/Widget.AppCompat.Button.Colored"
            />


        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Încarcă"
            android:textSize="22sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FBC02D"
            android:textColor="@color/black"

            />
    </LinearLayout>

</ScrollView>