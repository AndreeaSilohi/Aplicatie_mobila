<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produse.Pachet2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="@drawable/text_background"
            android:gravity="left"
            android:text="@string/pachet"
            android:textColor="@color/teal_700"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Un pachet Realcomplex"
            android:textStyle="bold"

            tools:ignore="TouchTargetSizeCheck" />



        <TextView
            android:id="@+id/editTextText2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Un pachet Realvita"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/editTextText3"
            android:layout_width="201dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:text="Un pachet ceai drenant The Mix"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/editTextText4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:text="O sticla de Aloe Drink"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:text="Un pachet Realfibre"

            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:gravity="right"
            app:srcCompat="@drawable/edit7" />


    </LinearLayout>
</ScrollView>