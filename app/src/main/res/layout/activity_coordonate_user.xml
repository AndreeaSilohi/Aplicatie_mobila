<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundalnou"
    tools:context=".optiuniMeniu.CoordonateUserActivity">


    <Button
        android:id="@+id/calculeaza_indice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="408dp"
        android:text="@string/Calculeaza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_margin="110dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/text_background"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculeaza_indice"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inaltime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="192dp"
        android:hint="Introduceti inaltimea"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inaltime"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculeaza_indice"
        android:layout_margin="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:hint="Introduceti greutatea"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inaltime"
        tools:ignore="TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="367dp"
        android:layout_height="94dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculeaza_indice"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_marginBottom="176dp"
        android:text="@string/sectiuni"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/catre_exercitii"
        android:layout_width="131dp"
        android:layout_height="52dp"
        android:layout_marginBottom="100dp"
        android:text="@string/exercitii"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"

        android:backgroundTint="@color/teal_200"/>

    <Button
        android:id="@+id/catre_detox"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:text="@string/produse_detox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"/>
</androidx.constraintlayout.widget.ConstraintLayout>